<section class="bg-light">
    <div class="container">
        <h2>Récents articles</h2>
        <div class="card mb-3" style="">
            {% for article in lastArticles %}
                <div class="row g-0 ">
                    <div class="col-md-4 ps-4">
                        <a href="{{ path('article_show', {'slug': article.slug}) }}"><img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('rectangle') }}" class="img-fluid rounded-start" alt="{{article.title}}"></a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <a href="{{ path('article_show', {'slug': article.slug}) }}"><h5 class="card-title fw-bold">{{article.title}}</h5></a>
                            <p class="card-text">{{ article.getExcerpt(0, 300) | raw }}</p>
                            <p class="card-text"><small class="text-muted">Date de publication : {{ article.createdAt | date('d/m/Y à H:i') }}</small></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

